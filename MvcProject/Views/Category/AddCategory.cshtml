@*BeginForm ekleme işlemlerinde kullanılır
    ilk değer üzerinde çalışılan exction ismi ikini parametre controller, 3. değer methosun biçimi get/post*@
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName)    <!--textbox içine name ataması gerçekleştirilebilir textbox for ile modele göre yapılabilir-->
        @Html.ValidationMessageFor(x=>x.CategoryName)
        <br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextBoxFor(x => x.CategoryDescription)
        @Html.ValidationMessageFor(x=>x.CategoryDescription)
        <br />
        
        <button>Kaydet</button>
    </div>
}



